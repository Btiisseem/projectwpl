<%- include('./partials/header') %>
  <main>
    <section id="gallery1" class="image-gallery">
      <% for(card of cards) { %>
        <article class="image">
          <h2 class="card-amount-info">2/4</h2>
          <a href="/cardinfodetail">
            <img src="<%= card.imageUrl%>" alt="<%= card.name%>" />
          </a>
        </article>
        <% } %>
    </section>

    <section class="pagination">


      <button id="prevBtn" disabled>Vorige</button>
      <span id="page1" class="page-number active">1</span>
      <span id="page2" class="page-number">2</span>
      <span id="page3" class="page-number">3</span>
      <button id="nextBtn">Volgende</button>
    </section>

  </main>
  <hr />

  </body>
  <%- include('./partials/footer') %>